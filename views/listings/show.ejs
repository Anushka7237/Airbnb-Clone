<% layout("/layouts/boilerplate")-%>
    <div class="row mt-5">
    <div class="col-8 offset-2 mt-3">
      <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-2 listing-card">
      <img src="<%= listing.image.url%>" class="card-img-top show-img mt-3 mb-2">
            <div class="card-body">
                <p class="card-text">
                  <i>Owned by: <%= listing.owner ? listing.owner.username : 'Unknown' %></i>
                </p>
                <p class="card-text">
                  <%= listing.description %>
                </p>
                <p class="card-text">
                &#8377 <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night<br>
                </p>
                <p class="card-text">
                  <%= listing.location || "N/A" %><br>
                  <%= listing.country || "N/A" %><br>
                </p>
            </div>
        </div>
        <br>
        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="row mb-5">
          <div class="col-2 offset-2 d-flex justify-content-center gap-2 ">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark">Edit</a>
            <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
        <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
        <div class="col-6 offset-2 mb-3 ">
          <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
              <div class=" mt-3 mb-3">
                <label for="rating" class="form-label" >Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              <div class="mb-3 ">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" cols="30" rows="5" id="Comment" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comment for Review</div>
              </div>
              <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
        <%}%>
        <% if(listing.reviews.length>0) { %>
          <div class="col-6 offset-2 mb-3">
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
            <% for (let review of (listing.reviews || [])) { %>
                <div class="card col-5 ms-3 mb-3">
                  <div class="card-body">
                    <h5 class="card-title">@<%= review.author ? review.author.username : 'Anonymous' %></h5>
                    <p class="starability-result card-text" data-rating="<%=review.rating%>">
                      Rated: <%=review.rating%> stars
                    </p>
                    <p class="card-text"><%=review.comment%></p>
                    <% if(currUser && (currUser._id.equals(review.author._id) || currUser._id.equals(listing.owner._id))) {%>
                    <form class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                      <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <%}%>
                  </div>
                </div>
            <% } %>
            </div>
          </div>
        <% } %>
        <div class="col-8 offset-2 mb-3">
          <h3>Where you'll be</h3>
          <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin=""/>
          <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>

          <% if (typeof mapCenter !== 'undefined' && mapCenter && mapCenter.lat) { %>
            <div id="listing-data" style="display:none"
                 data-center='<%- JSON.stringify(mapCenter || null) %>'
                 data-title='<%- JSON.stringify(listing.title || "") %>'
                 data-location='<%- JSON.stringify(listing.location || "") %>'
                 data-country='<%- JSON.stringify(listing.country || "") %>'
            ></div>
            <div id="listing-map" style="width:100%; height:300px; margin-top:12px;"></div>
              <script>
                (function() {
                  const dataElTop = document.getElementById('listing-data');
                  let center = null;
                  try {
                    if (dataElTop) center = JSON.parse(dataElTop.getAttribute('data-center'));
                  } catch (e) {
                    console.warn('Failed to parse mapCenter from data attribute', e);
                  }
                  if (!center) {
                    document.getElementById('listing-map').innerHTML = '<p class="text-muted">Map not available</p>';
                    return;
                  }
                  const lat = center.lat;
                  const lon = center.lon;
                  const map = L.map('listing-map').setView([lat, lon], 13);
                  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors'
                  }).addTo(map);
                  const marker = L.marker([lat, lon]).addTo(map);
                  const dataEl = document.getElementById('listing-data');
                  let listingTitle = 'Listing', listingLoc = '', listingCountry = '';
                  try {
                    if (dataEl) {
                      const rawCenter = dataEl.getAttribute('data-center');
                      listingTitle = JSON.parse(dataEl.getAttribute('data-title') || '"Listing"');
                      listingLoc = JSON.parse(dataEl.getAttribute('data-location') || '""');
                      listingCountry = JSON.parse(dataEl.getAttribute('data-country') || '""');
                    }
                  } catch (e) {
                    console.warn('Failed to parse listing data attributes', e);
                  }
                  marker.bindPopup(`<b>${listingTitle}</b><br>${listingLoc}${listingLoc && listingCountry ? ', ' : ''}${listingCountry}`).openPopup();
                })();
              </script>
          <% } else { %>
            <p class="text-muted">Map not available</p>
          <% } %>
          </div>
        </div>
      </div>